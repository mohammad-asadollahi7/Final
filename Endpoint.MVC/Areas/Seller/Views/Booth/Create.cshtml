@model Endpoint.MVC.Dtos.Booth.CreateBoothViewModel


<div class="container border rounded-2 p-2 my-2">

    <form method="post" asp-area="seller" asp-controller="booth" asp-action="create" class="form" enctype="multipart/form-data">

        <label class="form-label">عنوان غرفه</label>
        <input type="text" required class="form-control" name="Title" />

        <label class="mt-4 form-label">توضیحات</label>
        <textarea class="form-control" required name="Description"></textarea>

        <label class="form-label">تصویر</label>
        <input type="file" required class="form-control" name="Picture" />

        <div class="text-center">
            <button type="submit" class="my-4 btn btn-info">ایجاد</button>
        </div>
    </form>
</div>