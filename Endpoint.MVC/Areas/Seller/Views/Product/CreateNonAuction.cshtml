@model List<Endpoint.MVC.Dtos.Categories.CategoryTitleDto>

<div class="container border rounded-2 p-2 my-4">


    <form method="post" asp-controller="product" asp-area="seller" asp-action="createnonauction" class="form" enctype="multipart/form-data">


        <label class="form-label">عنوان فارسی</label>
        <input type="text" required oninvalid="this.setCustomValidity('فیلد الزامی')" oninput="this.setCustomValidity('')" class="form-control" name="PersianTitle" />

        <label class="mt-4 form-label">عنوان لاتین</label>
        <input type="text" required oninvalid="this.setCustomValidity('فیلد الزامی')" oninput="this.setCustomValidity('')" class="form-control" name="EnglishTitle" />

        <label class="mt-4 form-label">توضیحات</label>
        <textarea class="form-control" required oninvalid="this.setCustomValidity('فیلد الزامی')" oninput="this.setCustomValidity('')" name="Description"> </textarea>


        <label class="mt-4 form-label">تعداد اولیه محصول</label>
        <input type="number" required oninvalid="this.setCustomValidity('فیلد الزامی')" oninput="this.setCustomValidity('')" class="form-control" name="FirstQuantity" />

        <label class="mt-4 form-label">قیمت (تومان)</label>
        <input type="number" required oninvalid="this.setCustomValidity('فیلد الزامی')" oninput="this.setCustomValidity('')" class="form-control" name="FirstPrice" />

        <label class="mt-4 form-label">تخفیف</label>
        <input type="number" required oninvalid="this.setCustomValidity('فیلد الزامی')" oninput="this.setCustomValidity('')" class="form-control" name="FirstDiscount" />

        <label class="mt-4 form-label">عکس</label>
        <input type="file" required oninvalid="this.setCustomValidity('فیلد الزامی')" oninput="this.setCustomValidity('')" class="form-control" name="Picture" />

        <select required oninvalid="this.setCustomValidity('فیلد الزامی')" oninput="this.setCustomValidity('')" name="CategoryId" id="select-category" class="mt-4 form-select" onChange="GetAttributeTitles()">
            <option hidden disabled selected value="">انتخاب دسته بندی</option>
            @for (int i = 0; i < @Model.Count(); i++)
            {
                <option class="form-control"  oninput="this.setCustomValidity('')" value="@Model[i].Id">@Model[i].Title</option>
            }
        </select>

        <div id="attributeDiv">
        </div>


        <div class="text-center">
            <button type="submit" class="my-4 btn btn-info">افزودن</button>
        </div>


    </form>
</div>