@using Endpoint.MVC.ExtensionMethods;
@model Endpoint.MVC.Dtos.Products.AuctionDetailsDto

@section GetProductByIdCss{
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500" rel="stylesheet">
    <link href="~/Admin/ProductDetails/style.css" rel="stylesheet">
}


<main class="container border border-3 rounded-1 p-2">

    <!-- Left Column / Headphones Image -->
    <div class="left-column text-center rounded-3">
        @* <img data-image="black" src="images/black.png" alt="">
        <img data-image="blue" src="images/blue.png" alt="">*@
        <img data-image="red" class="active" src="~/img/@Model.PictureName" alt="">
    </div>


    <!-- Right Column -->
    <div class="right-column">

        <!-- Product Description -->
        <div class="product-description">
            <span>@Model.EnglishTitle</span>
            <h4>@Model.PersianTitle</h4>
            <p>@Model.Description</p>
            <h7 class="fw-bold">مشخصات:</h7>
            <ul class="list-group mt-1">
                @for (int i = 0; i < Model.CustomAttributes.Count(); i++)
                {
                    <li class="list-font list-group-item">@Model.CustomAttributes[i].Title : @Model.CustomAttributes[i].Value</li>
                }
            </ul>
        </div>

        <!-- Product Configuration -->
        <div class="product-configuration">

            <!-- Product Color -->
            @*   <div class="product-color">
            <span>Color</span>

            <div class="color-choose">
            <div>
            <input data-image="red" type="radio" id="red" name="color" value="red" checked>
            <label for="red"><span></span></label>
            </div>
            <div>
            <input data-image="blue" type="radio" id="blue" name="color" value="blue">
            <label for="blue"><span></span></label>
            </div>
            <div>
            <input data-image="black" type="radio" id="black" name="color" value="black">
            <label for="black"><span></span></label>
            </div>
            </div>

            </div>*@



            @*  <!-- Cable Configuration -->
            <div class="cable-config">
            <span>Cable configuration</span>

            <div class="cable-choose">
            <button>Straight</button>
            <button>Coiled</button>
            <button>Long-coiled</button>
            </div>
            </div>*@

        </div>

        <!-- Product Pricing -->
        <div class="product-price mb-3">
            <span>حداقل قیمت قابل پیشنهاد:  @Model.MinPrice تومان</span>
        </div>
        <div class="text-center">
            <h6> <span>زمان شروع:</span> @Model.FromDate.ToPersian()</h6>
            <h6> <span>زمان پایان:</span> @Model.ToDate.ToPersian()</h6>
        </div>
    </div>


</main>
<div class="m-2 text-center">
    <a class="btn btn-primary" asp-area="seller" asp-action="updateAuction" asp-controller="product" asp-route-id="@Model.Id">بروزرسانی</a>
    <a class="btn btn-danger" asp-area="seller" asp-action="deleteAuction" asp-controller="product" asp-route-id="@Model.Id">حذف</a>
    <a class="btn btn-secondary" asp-area="seller" asp-action="FinalizeAuctionOrder" asp-controller="product" asp-route-productId="@Model.Id">نهایی کردن مزایده</a>
    <a class="btn btn-info" asp-area="seller" asp-action="DeactiveAuction" asp-controller="product" asp-route-productId="@Model.Id">غیرفعال کردن مزایده</a>
</div>



@section GetProductByIdScript{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js" charset="utf-8"></script>
    <script src="~/Admin/ProductDetails/script.js" charset="utf-8"></script>
    }

