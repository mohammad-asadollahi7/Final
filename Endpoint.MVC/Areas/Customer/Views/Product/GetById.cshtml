@model Endpoint.MVC.Dtos.Products.ProductDetailsDto

<div class="col d-flex flex-wrap mt-5 gap-3 justify-content-center align-items-center">

    <div class="col-lg-5 p-3 border rounded-3">
        <h5>@Model.PersianTitle</h5>
        <h7>@Model.EnglishTitle</h7>
        <div class="mt-4 h-50">
            <h7 class="fw-bold">توضیحات:</h7>
            <a id="popup-link">
                <p class="paragraph-style lead">@Model.Description</p>
            </a>

            <div class="text-center rounded-2" id="popup-window">
                <h7 class="fw-bold">توضیحات محصول</h7>
                <p class="paragraph-style2 lead">@Model.Description</p>
                <button id="close-button" class="btn btn-outline-primary">بستن</button>
            </div>
        </div>

        <h7 class="fw-bold">مشخصات:</h7>
        <ul class="list-group mt-1">
            @for (int i = 0; i < Model.CustomAttributes.Count(); i++)
            {
                <li class="list-font list-group-item">@Model.CustomAttributes[i].Title : @Model.CustomAttributes[i].Value</li>
            }
        </ul>

    </div>
    <div class="col-lg-5">
        <div id="carouselExampleControlsNoTouching" class="bg-color text-center carousel slide" data-bs-touch="false" data-bs-interval="false">
            <div class="carousel-inner">

                @for (int i = 0; i < Model.ProductPictureDto.Count(); i++)
                {
                    if (i == 0)
                    {
                        <div class="carousel-item active text-center">
                            <img src="~/pictures/@Model.ProductPictureDto[i].Name" class="detail-pic-style">
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item">
                            <img src="~/pictures/@Model.ProductPictureDto[i].Name" class="detail-pic-style">
                        </div>
                    }
                }

            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControlsNoTouching" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControlsNoTouching" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>

        <div class="d-flex my-4 justify-content-between align-items-center">
            <div class="text-center px-3 py-1 border border-secondary rounded-1">@Model.CalculatedRate <span><img src="~/icons/star.png" /></span></div>
            @if (Model.DiscountPercent == 0)
            {
                <div>@Model.Price <span class="fs-7">تومان</span></div>
            }
            else
            {
                var finalPrice = @Model.Price * Convert.ToDecimal((100 - Model.DiscountPercent) * 0.01);
                <div>
                    <div> <span class="text-decoration-line-through">@Model.Price</span> (% @Model.DiscountPercent)</div>
                    <div>@finalPrice <span class="fs-7">تومان</span></div>
                </div>
            }
        </div>
        <form method="post" asp-action="AddProductToCart" asp-controller="Cart" class="text-center gap-1 d-flex justify-content-center align-items-center">
            <input type="hidden" name="productId" value="@Model.Id" />
            <input type="number" name="count" class="form-control w-25" placeholder="تعداد" />
            <button type="submit" class="btn btn-primary">افزودن به سبد خرید</button>
        </form>

    </div>

</div>


<div id="comment" class="my-5">
    <hr />
    <button id="space1" onclick="getComment(@Model.Id)" class="btn btn-lg btn-light">برای مشاهده نظرات کلیک کنید</button>

</div>


