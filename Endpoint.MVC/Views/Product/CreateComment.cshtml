@model int


<div class="col-6 container text-right border rounded-2 p-2 my-4">

    <form method="post" asp-controller="product" asp-action="createcomment" class="form">

        <input type="hidden" name="ProductId" value="@Model"/>

        <label class="form-label">عنوان</label>
        <input type="text" required class="form-control" name="Title" />

        <label class="mt-4 form-label">توضیحات</label>
        <textarea class="form-control" required name="Description"> </textarea>

        <div class="d-flex gap-3 align-items-center mt-4">
            <label class="my-0 form-label">آیا خرید این محصول را توصیه میکنید؟ </label>
            <input type="checkbox" class="form-check" checked name="IsRecommended" value="true" />
        </div>
       

        <div class="text-center">
            <button type="submit" class="my-4 btn btn-info">ثبت</button>
        </div>


    </form>
</div>