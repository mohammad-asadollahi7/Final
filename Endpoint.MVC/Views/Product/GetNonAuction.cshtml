@model Endpoint.MVC.Dtos.Products.ProductDetailsDto


@section js{
    <script>
        function AddProductToCart(productId) {
            let cookies = document.cookie;
            let cookieArray = cookies.split("; ");

            for (let i = 0; i < cookieArray.length; i++) {
                let cookie = cookieArray[i];
                let [name, value] = cookie.split("=");

                if (name === 'authorize') {
                    var token = 'Bearer ' + decodeURIComponent(value);
                }
            }

            $.ajax({
                url: `http://localhost:5153/api/Cart/AddProduct/` + productId,
                type: 'get',
                beforeSend: function (xhr) {
                    xhr.setRequestHeader('Authorization', token);
                },
                success: function (response) {
                    alert('با موفقیت افزوده شد');

                },
                error: function (error) {

                    alert(JSON.stringify(error.responseText));
                }
            })
        }

    </script>

    }


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="single-box">
                <div class="row">
                    <div class="col-md-7">
                        <div class="text-right">
                            <h6>@Model.EnglishTitle</h6>
                            <h4>@Model.PersianTitle</h4>
                            <hr />
                            <p><span class="fw-1">توضیحات:</span>  @Model.Description</p>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-md-7">
                                <div class="single-content-right">

                                    <br>
                                    <span>مشخصات مختصر محصول :</span><br>
                                    <ul class="product-ul">
                                        @for (int i = 0; i < Model.CustomAttributes.Count(); i++)
                                        {
                                            <li class="list-font list-group-item">@Model.CustomAttributes[i].Title : @Model.CustomAttributes[i].Value</li>
                                        }
                                    </ul>
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div class="single-content-left">
                                    <ul>
                                        <span>وضعیت : موجود در انبار</span>
                                        <br>

                                        <li>
                                            رنگ بندی :
                                            <ul>
                                                <li><i class="fa fa-square white"></i>سفید</li>
                                                <li><i class="fa fa-square black"></i>مشکی</li>
                                                <li><i class="fa fa-square silver"></i>نقره ای</li>
                                                <li><i class="fa fa-square gold"></i>طلایی</li>
                                            </ul>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <hr>
                        <h3>@Model.Price تومان (تخفیف % @Model.DiscountPercent)</h3>

                        <div class="btn-single">
                            <a href="javascript:AddProductToCart(@Model.Id);" class="btn fa fa-cart-plus"> افزودن به سبد </a>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="single-img">
                            <figure>
                                <img src="~/img/@Model.PictureName" class="w-100">
                            </figure>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

