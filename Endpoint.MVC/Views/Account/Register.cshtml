@model Endpoint.MVC.Dtos.RegisterDto


<div class="main d-flex flex-column gap-4 pt-2 border border-black rounded-2">

    <div class="d-flex flex-column">
        <div class="d-flex justify-content-center align-items-center gap-2">
            <h6>خوش آمدید</h6>
            <img width="40" src="~/icon/register.png">
        </div>
    </div>

    <form method="post" asp-action="register" asp-controller="account" class="d-flex flex-column gap-3 mx-1">
        <div>
            <input required oninvalid="this.setCustomValidity('فیلد الزامی')" oninput="this.setCustomValidity('')" name="FName" class="form-control" type="text" placeholder="نام">
            <span class="text-danger" asp-validation-for="@Model.FName"></span>
        </div>
   
        <div>
            <input required oninvalid="this.setCustomValidity('فیلد الزامی')" oninput="this.setCustomValidity('')" name="LName" class="form-control" type="text" placeholder="نام خانوادگی">
            <span class="text-danger" asp-validation-for="@Model.LName"></span>
        </div>
     
        <div>
            <input required oninvalid="this.setCustomValidity('فیلد الزامی')" oninput="this.setCustomValidity('')" name="Username" class="form-control" type="text" placeholder="نام کاربری">
            <span class="text-danger" asp-validation-for="@Model.Username"></span>
        </div>
  
        <div>
            <input required oninvalid="this.setCustomValidity('فیلد الزامی')" oninput="this.setCustomValidity('')" name="Email" class="form-control" type="email" placeholder="ایمیل">
            <span class="text-danger" asp-validation-for="@Model.Email"></span>
        </div>
    
        <div>
            <input required oninvalid="this.setCustomValidity('فیلد الزامی')" oninput="this.setCustomValidity('')" name="PhoneNumber" class="form-control" type="number" placeholder="شماره موبایل">
        
        </div>
      
        <div>
            <input required oninvalid="this.setCustomValidity('فیلد الزامی')" oninput="this.setCustomValidity('')" name="Password" class="form-control" type="password" placeholder="رمز عبور">
            <span class="text-danger" asp-validation-for="@Model.Password"></span>
        </div>

        <div>
            <input name="ConfirmPassword" class="form-control" type="password" placeholder="تکرار رمز عبور">
            <span required oninvalid="this.setCustomValidity('فیلد الزامی')" oninput="this.setCustomValidity('')" class="text-danger" asp-validation-for="@Model.ConfirmPassword"></span>
        </div>


        <select required oninvalid="this.setCustomValidity('فیلد الزامی')" oninput="this.setCustomValidity('')" name="Role" class="form-select">
            <option class="form-control" hidden disabled selected value="">نقش</option>
            <option class="form-control" value="0">خریدار</option>
            <option class="form-control" value="1">ادمین</option>
            <option class="form-control" value="2">فروشنده</option>
        </select>


        <button class="btn btn-primary my-3 mx-4 fw-bold" type="submit">ثبت نام</button>
    </form>
</div>



