@model Endpoint.MVC.Dtos.UserOutputDto


<div class="main d-flex flex-column gap-4 pt-2 border border-black rounded-2">

    <div class="d-flex flex-column">
        <div class="d-flex justify-content-center align-items-center gap-2">
            <h6>خوش آمدید</h6>
            <img width="40" src="~/icon/register.png">
        </div>
    </div>

    <form method="post" asp-action="update" asp-controller="account" class="d-flex flex-column gap-3 mx-1">
        
        <input name="FullName" class="form-control" type="text" asp-for="@Model.FullName">
        <span class="text-danger" asp-validation-for="@Model.FullName"></span>

        <input name="Username" class="form-control" type="text" asp-for="@Model.Username">
        <span class="text-danger" asp-validation-for="@Model.Username"></span>

        <input name="Email" class="form-control" type="email" asp-for="@Model.Email">
        <span class="text-danger" asp-validation-for="@Model.Email"></span>

        <input name="PhoneNumber" class="form-control" type="text" asp-for="@Model.PhoneNumber">

        <input name="OldPassword" class="form-control" type="password" placeholder="رمز عبور قبلی">

        <input name="NewPassword" class="form-control" type="password" placeholder="رمز عبور جدید">
        <input name="ConfirmPassword" class="form-control" type="password" placeholder="رمز عبور جدید">

        <button class="btn btn-primary my-3 mx-4 fw-bold" type="submit"> بروزرسانی</button>
    </form>
</div>



